    <select id="findPaymentList" resultMap="paymentResultMap">
        SELECT
        paymentNo,
        paymentPrice,
        paymentDate,
        apiPayNo,
        projectNo,
        orderNo,
        rewardNo,
        userNo
        FROM
        PAYMENT
        ORDER BY
        paymentNo DESC
        LIMIT #{offset}, #{limit};

    </select>
