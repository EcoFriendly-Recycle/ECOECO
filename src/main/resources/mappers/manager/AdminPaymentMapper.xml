    <select id="paymentListDetail" resultMap="paymentResultMap">
        SELECT
        py.paymentNo,
        py.paymentPrice,
        py.paymentDate,
        py.apiPayNo,
        py.projectNo,
        py.orderNo,
        py.rewardNo,
        py.userNo,
        p.projectName,
        u.userId,
        u.userName,
        o.orderPrice,
        r.rewardName
        FROM
        PAYMENT py
        LEFT JOIN
        PROJECT p ON py.projectNo = p.projectNo
        LEFT JOIN
        `ORDER` o ON py.orderNo = o.orderNo
        LEFT JOIN
        USER_INFO u ON py.userNo = u.userNo
        LEFT JOIN
        REWARD r ON py.rewardNo = r.rewardNo
        WHERE
        py.paymentNo = #{paymentNo}

    </select>
