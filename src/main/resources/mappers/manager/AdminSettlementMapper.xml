    <select id="findSettlementList" resultMap="settlementResultMap">
        SELECT
        s.settlementNo,
        s.settlementStatus,
        s.settlementPrice,
        s.settlementDate,
        s.makerNo,
        s.projectNo,
        p.endDate AS projectEndDate,
        p.achievedAmount AS projectAchievedAmount
        FROM
        SETTLEMENT s
        LEFT JOIN
        PROJECT p ON s.projectNo = p.projectNo
        ORDER BY
        s.settlementNo DESC
        LIMIT #{offset}, #{limit};
    </select>

    <select id="settlementListDetail" resultMap="settlementResultMap">
        SELECT
        s.settlementNo,
        s.settlementStatus,
        s.settlementPrice,
        s.settlementDate,
        m.makerNo,
        m.makerName AS projectMaker,
        p.projectNo,
        p.projectName,
        p.targetAmount,
        p.achievedAmount,
        ((p.achievedAmount / p.targetAmount) * 100) AS achievementRate,
        p.serviceCharge,
        p.endDate,
        ui.userAccount,
        ba.bankName
        FROM
        SETTLEMENT s
        JOIN
        PROJECT p ON s.projectNo = p.projectNo
        JOIN
        MAKER m ON p.projectNo = m.projectNo
        JOIN
        USER_INFO ui ON m.userNo = ui.userNo
        JOIN
        BANK_ACCOUNT ba ON ui.userAccount = ba.accountNo
        WHERE
        s.settlementNo = #{settlementNo};

    </select>
